<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noverish.restapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".kakao.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider1738070796478578"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity android:name=".activity.SplashActivity"
            android:theme="@style/SplashActivityStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.HomeActivity" />

        <activity android:name=".twitter.ReplyTwitterActivity" />

        <activity android:name=".kakao.KakaoLoginActivity" />

        <activity
            android:name=".kakao.KakaoMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/kakao_scheme"
                    android:host="@string/kakaostory_host" />
            </intent-filter>
        </activity>
    </application>

</manifest>
